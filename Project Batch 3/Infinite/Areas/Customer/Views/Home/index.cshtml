@model IEnumerable<Product> 
@using batch3.Models 

<form class="form-inline my-2 my-lg-0" id="filterForm" method="get" action="@Url.Action("Index", "Home")">
    <div class="input-group">
        <div class="mr-2">
            <select class="custom-select custom-select-sm" id="inlineCategory" name="CategoryId">
                <option value="">All Categories</option>
                @foreach (var category in ViewBag.Categories as List<Category>)
                {
                    <option value="@category.CategoryId">@category.Name</option>
                }
            </select>
        </div>

        <div class="mr-2">
            <input type="text" class="form-control form-control-sm" id="inlineProductTitle" name="ProductTitle" placeholder="Enter product title" style="max-width: 150px; height: 30px;">
        </div>

        <div>
            <button class="btn btn-success btn-sm" type="submit" style="height: 30px;">Filter</button>
        </div>
    </div>
</form>

@* JavaScript code to handle category change and submit form *@
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#inlineCategory').change(function () {
                $('#filterForm').submit();
            });
        });
    </script>
}





<!-- Products display code -->

<div class="row">
    <div class="col-md-12">
        <h2>Products</h2>
    </div>
</div>
<div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-sm-6">
                    <div class="row p-2">
                        <div class="col-12 p-1">
                            <div class="card border-0 p-3 border-top border-bottom border-5 rounded" style="cursor:pointer">
                                <img src="@item.ImageUrl" height="auto" width="300px"  class="card-img-top rounded" alt="...">
                                <div class="card-body">
                                    <h5 class="card-title text-dark text-uppercase text-center h5 opacity-75">@item.Title</h5>
                                    <p class="card-title text-warning text-center">by @item.Brand</p>
                                </div>
                                <div class="text-center">
                                    <p class="card-text text-center text-success">@item.Price₹</p>
                                    <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-primary" style="width:100%">Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            } 
        </table>
    </div>
</div>
